<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/cover1"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.ActivityLevel">

    <com.example.amr.mazegame.MazeCreator.GameView
        android:id="@+id/view"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:layout_above="@+id/UpBtnLvl1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Text"
        android:layout_marginRight="15dp"
        android:id="@+id/Quesion"
        android:layout_above="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="أعلى"
        android:id="@+id/UpBtnLvl1"
        android:layout_above="@+id/RightBtnLvl1"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="يمين"
        android:id="@+id/RightBtnLvl1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/UpBtnLvl1"
        android:layout_toEndOf="@+id/UpBtnLvl1"
        android:layout_marginBottom="76dp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="أسفل"
        android:id="@+id/DownBtnLvl1"
        android:layout_alignTop="@+id/RightBtnLvl1"
        android:layout_toLeftOf="@+id/RightBtnLvl1"
        android:layout_toStartOf="@+id/RightBtnLvl1"
        android:layout_marginTop="37dp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="يسار"
        android:id="@+id/LeftBtnLvl1"
        android:layout_below="@+id/UpBtnLvl1"
        android:layout_toLeftOf="@+id/UpBtnLvl1"
        android:layout_toStartOf="@+id/UpBtnLvl1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/tree"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="level Name"
        android:textColor="@color/colorAccent"
        android:id="@+id/levelName"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
